generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/pharmacy_management_system/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Medicine {
  id            String    @id @default(cuid())
  name          String
  genericName   String?
  manufacturer  String?
  batchNumber   String
  expiryDate    DateTime
  quantity      Int
  reorderLevel  Int       @default(10)
  unitPrice     Float
  category      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  saleItems     SaleItem[]

  @@index([name])
  @@index([category])
  @@index([batchNumber])
  @@index([expiryDate])
}

model Sale {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  customerName  String?
  customerPhone String?
  subtotal      Float
  discount      Float     @default(0)
  total         Float
  paymentMethod String    // CASH, CARD, MPESA, OTHER
  paymentStatus String    @default("PAID") // PAID, PENDING, PARTIAL
  notes         String?
  soldBy        String?   // User who made the sale
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         SaleItem[]

  @@index([invoiceNumber])
  @@index([createdAt])
  @@index([paymentMethod])
}

model SaleItem {
  id            String    @id @default(cuid())
  saleId        String
  medicineId    String
  medicineName  String    // Store name at time of sale
  batchNumber   String    // Store batch at time of sale
  quantity      Int
  unitPrice     Float     // Store price at time of sale
  total         Float
  sale          Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  medicine      Medicine  @relation(fields: [medicineId], references: [id])

  @@index([saleId])
  @@index([medicineId])
}
