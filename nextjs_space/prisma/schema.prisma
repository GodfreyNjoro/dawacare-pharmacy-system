generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/pharmacy_management_system/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Branch Management
model Branch {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique  // Short code like "MAIN", "BR001"
  address       String?
  phone         String?
  email         String?
  isMainBranch  Boolean   @default(false)
  status        String    @default("ACTIVE") // ACTIVE, INACTIVE
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  users         User[]
  medicines     Medicine[]
  sales         Sale[]
  purchaseOrders PurchaseOrder[]
  grns          GoodsReceivedNote[]
  stockTransfersFrom StockTransfer[] @relation("FromBranch")
  stockTransfersTo   StockTransfer[] @relation("ToBranch")
  exportHistory ExportHistory[]
  prescriptions Prescription[]

  @@index([code])
  @@index([status])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("CASHIER") // ADMIN, PHARMACIST, CASHIER
  status        String    @default("ACTIVE")  // ACTIVE, INACTIVE
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([role])
  @@index([status])
  @@index([branchId])
}

model Medicine {
  id            String    @id @default(cuid())
  name          String
  genericName   String?
  manufacturer  String?
  batchNumber   String
  expiryDate    DateTime
  quantity      Int
  reorderLevel  Int       @default(10)
  unitPrice     Float
  category      String
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  saleItems     SaleItem[]

  @@index([name])
  @@index([category])
  @@index([batchNumber])
  @@index([expiryDate])
  @@index([branchId])
}

// Customer Management
model Customer {
  id            String    @id @default(cuid())
  name          String
  phone         String    @unique
  email         String?
  address       String?
  dateOfBirth   DateTime?
  gender        String?   // MALE, FEMALE, OTHER
  loyaltyPoints Int       @default(0)
  creditBalance Float     @default(0)  // Amount customer owes
  creditLimit   Float     @default(0)  // Maximum credit allowed
  status        String    @default("ACTIVE") // ACTIVE, INACTIVE
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sales         Sale[]
  loyaltyTransactions LoyaltyTransaction[]
  creditTransactions  CreditTransaction[]
  prescriptions Prescription[]

  @@index([name])
  @@index([phone])
  @@index([email])
  @@index([status])
}

model LoyaltyTransaction {
  id            String    @id @default(cuid())
  customerId    String
  customer      Customer  @relation(fields: [customerId], references: [id])
  type          String    // EARN, REDEEM, ADJUST
  points        Int       // Positive for earn, negative for redeem
  saleId        String?   // Reference to associated sale
  description   String?
  createdAt     DateTime  @default(now())

  @@index([customerId])
  @@index([saleId])
  @@index([createdAt])
}

model CreditTransaction {
  id            String    @id @default(cuid())
  customerId    String
  customer      Customer  @relation(fields: [customerId], references: [id])
  type          String    // CREDIT, PAYMENT
  amount        Float     // Positive for credit, negative for payment
  saleId        String?   // Reference to associated sale
  description   String?
  createdBy     String?   // User who recorded this
  createdAt     DateTime  @default(now())

  @@index([customerId])
  @@index([saleId])
  @@index([createdAt])
}

model Sale {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  customerId    String?   // Optional - for walk-in customers
  customer      Customer? @relation(fields: [customerId], references: [id])
  customerName  String?   // Keep for walk-in customers
  customerPhone String?   // Keep for walk-in customers
  subtotal      Float
  discount      Float     @default(0)
  loyaltyPointsUsed Int   @default(0)  // Points redeemed
  loyaltyPointsEarned Int @default(0)  // Points earned from this sale
  total         Float
  paymentMethod String    // CASH, CARD, MPESA, CREDIT, OTHER
  paymentStatus String    @default("PAID") // PAID, PENDING, PARTIAL
  notes         String?
  soldBy        String?   // User who made the sale
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         SaleItem[]

  @@index([invoiceNumber])
  @@index([customerId])
  @@index([createdAt])
  @@index([paymentMethod])
  @@index([branchId])
}

model SaleItem {
  id            String    @id @default(cuid())
  saleId        String
  medicineId    String
  medicineName  String    // Store name at time of sale
  batchNumber   String    // Store batch at time of sale
  quantity      Int
  unitPrice     Float     // Store price at time of sale
  total         Float
  sale          Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  medicine      Medicine  @relation(fields: [medicineId], references: [id])

  @@index([saleId])
  @@index([medicineId])
}

// Procurement Models
model Supplier {
  id            String    @id @default(cuid())
  name          String
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  status        String    @default("ACTIVE") // ACTIVE, INACTIVE
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  purchaseOrders PurchaseOrder[]

  @@index([name])
  @@index([status])
}

model PurchaseOrder {
  id            String    @id @default(cuid())
  poNumber      String    @unique
  supplierId    String
  supplier      Supplier  @relation(fields: [supplierId], references: [id])
  status        String    @default("DRAFT") // DRAFT, SENT, PARTIAL, RECEIVED, CANCELLED
  subtotal      Float
  tax           Float     @default(0)
  total         Float
  notes         String?
  expectedDate  DateTime?
  createdBy     String?
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         PurchaseOrderItem[]
  grns          GoodsReceivedNote[]

  @@index([poNumber])
  @@index([supplierId])
  @@index([status])
  @@index([createdAt])
  @@index([branchId])
}

model PurchaseOrderItem {
  id              String    @id @default(cuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  medicineName    String
  genericName     String?
  quantity        Int
  receivedQty     Int       @default(0)
  unitCost        Float
  total           Float
  category        String?

  @@index([purchaseOrderId])
}

model GoodsReceivedNote {
  id              String    @id @default(cuid())
  grnNumber       String    @unique
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  receivedDate    DateTime  @default(now())
  receivedBy      String?
  notes           String?
  status          String    @default("RECEIVED") // RECEIVED, PARTIAL, REJECTED
  branchId        String?
  branch          Branch?   @relation(fields: [branchId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  items           GRNItem[]

  @@index([grnNumber])
  @@index([purchaseOrderId])
  @@index([receivedDate])
  @@index([branchId])
}

model GRNItem {
  id              String    @id @default(cuid())
  grnId           String
  grn             GoodsReceivedNote @relation(fields: [grnId], references: [id], onDelete: Cascade)
  medicineName    String
  batchNumber     String
  expiryDate      DateTime
  quantityReceived Int
  unitCost        Float
  total           Float
  addedToInventory Boolean  @default(false)

  @@index([grnId])
}

// Stock Transfer between branches
model StockTransfer {
  id              String    @id @default(cuid())
  transferNumber  String    @unique
  fromBranchId    String
  fromBranch      Branch    @relation("FromBranch", fields: [fromBranchId], references: [id])
  toBranchId      String
  toBranch        Branch    @relation("ToBranch", fields: [toBranchId], references: [id])
  status          String    @default("PENDING") // PENDING, IN_TRANSIT, COMPLETED, CANCELLED
  notes           String?
  createdBy       String?
  completedBy     String?
  createdAt       DateTime  @default(now())
  completedAt     DateTime?
  updatedAt       DateTime  @updatedAt
  items           StockTransferItem[]

  @@index([transferNumber])
  @@index([fromBranchId])
  @@index([toBranchId])
  @@index([status])
  @@index([createdAt])
}

model StockTransferItem {
  id              String    @id @default(cuid())
  transferId      String
  transfer        StockTransfer @relation(fields: [transferId], references: [id], onDelete: Cascade)
  medicineId      String
  medicineName    String
  batchNumber     String
  quantity        Int
  unitPrice       Float

  @@index([transferId])
  @@index([medicineId])
}

// Accounting Exports
model AccountMapping {
  id              String    @id @default(cuid())
  accountType     String    // SALES_REVENUE, SALES_TAX, INVENTORY_ASSET, COGS, PURCHASE, CASH, BANK, ACCOUNTS_PAYABLE, ACCOUNTS_RECEIVABLE
  accountCode     String    // Account code in accounting software (e.g., "4000", "1200")
  accountName     String    // Descriptive name (e.g., "Sales Revenue", "Inventory Asset")
  description     String?
  tallyLedger     String?   // Tally ledger name mapping
  sageLedger      String?   // Sage ledger code mapping
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([accountType])
  @@index([isActive])
}

model ExportHistory {
  id              String    @id @default(cuid())
  exportType      String    // SALES, PURCHASES, INVENTORY, TALLY, SAGE
  format          String    // CSV, XML, JSON
  dateFrom        DateTime
  dateTo          DateTime
  recordCount     Int       @default(0)
  fileName        String
  fileSize        Int?      // File size in bytes
  status          String    @default("COMPLETED") // COMPLETED, FAILED, IN_PROGRESS
  errorMessage    String?
  exportedBy      String?   // User who triggered export
  branchId        String?
  branch          Branch?   @relation(fields: [branchId], references: [id])
  createdAt       DateTime  @default(now())

  @@index([exportType])
  @@index([status])
  @@index([createdAt])
  @@index([branchId])
}

// Prescription Module - Kenya PPB Compliance
model Prescriber {
  id                String    @id @default(cuid())
  name              String
  registrationNumber String   @unique  // Medical/dental/nursing council registration
  councilType       String    // KMPDC (doctors), NCK (nurses), KPHC (pharmacists), etc.
  specialization    String?
  facility          String?   // Hospital/clinic name
  facilityAddress   String?
  phone             String?
  email             String?
  status            String    @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED
  verifiedAt        DateTime?
  verifiedBy        String?
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  prescriptions     Prescription[]

  @@index([registrationNumber])
  @@index([councilType])
  @@index([status])
  @@index([name])
}

model Prescription {
  id                String    @id @default(cuid())
  prescriptionNumber String   @unique  // RX-YYYYMMDD-XXXX format
  
  // Prescriber Info
  prescriberId      String
  prescriber        Prescriber @relation(fields: [prescriberId], references: [id])
  
  // Patient Info (link to Customer as patient)
  customerId        String?
  customer          Customer? @relation(fields: [customerId], references: [id])
  patientName       String    // Store even if walk-in
  patientPhone      String?
  patientAge        Int?
  patientGender     String?   // MALE, FEMALE, OTHER
  patientAddress    String?
  
  // Prescription Details
  diagnosis         String?   // ICD-10 code or description
  status            String    @default("PENDING") // PENDING, PARTIAL, DISPENSED, EXPIRED, CANCELLED
  priority          String    @default("NORMAL") // NORMAL, URGENT, STAT
  
  // Validity
  issueDate         DateTime  @default(now())
  expiryDate        DateTime  // Typically 30 days for regular, 7 days for controlled
  
  // Refills (for chronic conditions)
  refillsAllowed    Int       @default(0)
  refillsUsed       Int       @default(0)
  
  // Notes
  prescriptionNotes String?   // Instructions from prescriber
  pharmacistNotes   String?   // Notes from dispensing pharmacist
  
  // Tracking
  receivedBy        String?   // Staff who received the prescription
  branchId          String?
  branch            Branch?   @relation(fields: [branchId], references: [id])
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  items             PrescriptionItem[]
  dispensings       PrescriptionDispensing[]

  @@index([prescriptionNumber])
  @@index([prescriberId])
  @@index([customerId])
  @@index([patientName])
  @@index([status])
  @@index([issueDate])
  @@index([expiryDate])
  @@index([branchId])
}

model PrescriptionItem {
  id                String    @id @default(cuid())
  prescriptionId    String
  prescription      Prescription @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  
  // Medicine Info
  medicineName      String
  genericName       String?
  strength          String?   // e.g., "500mg", "250mg/5ml"
  dosageForm        String?   // TABLET, CAPSULE, SYRUP, INJECTION, etc.
  
  // Quantity and Dosage
  quantityPrescribed Int
  quantityDispensed Int       @default(0)
  dosage            String    // e.g., "1 tablet", "5ml"
  frequency         String    // e.g., "TDS", "BD", "OD", "PRN"
  duration          String?   // e.g., "7 days", "2 weeks"
  route             String?   // ORAL, IV, IM, TOPICAL, etc.
  
  // Additional Instructions
  instructions      String?   // Special instructions (e.g., "Take with food")
  substitutionAllowed Boolean @default(true) // Can generic be substituted?
  
  // Controlled Substance Flag
  isControlled      Boolean   @default(false) // For Poisons Act compliance
  scheduleClass     String?   // Schedule I, II, III, etc. (Kenya Poisons Act)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  dispensings       PrescriptionItemDispensing[]

  @@index([prescriptionId])
  @@index([medicineName])
  @@index([isControlled])
}

// Track each dispensing event (supports partial dispensing)
model PrescriptionDispensing {
  id                String    @id @default(cuid())
  prescriptionId    String
  prescription      Prescription @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  saleId            String?   // Link to sale transaction
  
  dispensedBy       String    // Pharmacist who dispensed
  dispensedByName   String    // Store name at time of dispensing
  verifiedBy        String?   // Second pharmacist verification (if required)
  
  dispensingNotes   String?
  counselingProvided Boolean  @default(false) // Patient counseling documented
  
  createdAt         DateTime  @default(now())
  items             PrescriptionItemDispensing[]

  @@index([prescriptionId])
  @@index([saleId])
  @@index([dispensedBy])
  @@index([createdAt])
}

model PrescriptionItemDispensing {
  id                String    @id @default(cuid())
  dispensingId      String
  dispensing        PrescriptionDispensing @relation(fields: [dispensingId], references: [id], onDelete: Cascade)
  prescriptionItemId String
  prescriptionItem  PrescriptionItem @relation(fields: [prescriptionItemId], references: [id], onDelete: Cascade)
  
  medicineId        String?   // Actual medicine dispensed from inventory
  medicineName      String    // Name of actual medicine dispensed
  batchNumber       String
  quantityDispensed Int
  unitPrice         Float
  
  isSubstitution    Boolean   @default(false) // Was generic substituted?
  
  createdAt         DateTime  @default(now())

  @@index([dispensingId])
  @@index([prescriptionItemId])
  @@index([medicineId])
}

// Audit Trail - ALCOA+ Compliance (Kenya PPB & WHO GDP)
model AuditLog {
  id              String    @id @default(cuid())
  
  // WHO made the change (Attributable)
  userId          String
  userName        String    // Store name at time of action
  userEmail       String    // Store email at time of action
  userRole        String    // Store role at time of action
  
  // WHAT was changed
  action          String    // CREATE, UPDATE, DELETE, VIEW, LOGIN, LOGOUT, EXPORT
  entityType      String    // MEDICINE, SALE, USER, PURCHASE_ORDER, GRN, SUPPLIER, CUSTOMER, etc.
  entityId        String?   // ID of the affected record
  entityName      String?   // Human-readable identifier (e.g., medicine name, invoice number)
  
  // BEFORE and AFTER values (for updates)
  previousValues  String?   // JSON stringified previous state
  newValues       String?   // JSON stringified new state
  changedFields   String?   // JSON array of field names that changed
  
  // Context
  ipAddress       String?   // Client IP address
  userAgent       String?   // Browser/device info
  branchId        String?   // Branch where action occurred
  branchName      String?   // Branch name at time of action
  
  // Additional metadata
  description     String?   // Human-readable description of the action
  severity        String    @default("INFO") // INFO, WARNING, CRITICAL
  
  // Timestamp (Contemporaneous)
  createdAt       DateTime  @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([entityId])
  @@index([createdAt])
  @@index([branchId])
  @@index([severity])
}
