generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/pharmacy_management_system/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Medicine {
  id            String    @id @default(cuid())
  name          String
  genericName   String?
  manufacturer  String?
  batchNumber   String
  expiryDate    DateTime
  quantity      Int
  reorderLevel  Int       @default(10)
  unitPrice     Float
  category      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([name])
  @@index([category])
  @@index([batchNumber])
  @@index([expiryDate])
}
