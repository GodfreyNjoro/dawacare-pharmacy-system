generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-postgresql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("CASHIER") // ADMIN, PHARMACIST, CASHIER
  status        String    @default("ACTIVE")  // ACTIVE, INACTIVE
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastSyncedAt  DateTime?

  @@index([role])
  @@index([status])
  @@index([branchId])
}

model Branch {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique
  address       String?
  phone         String?
  email         String?
  isMainBranch  Boolean   @default(false)
  status        String    @default("ACTIVE")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastSyncedAt  DateTime?
  users         User[]
  medicines     Medicine[]
  sales         Sale[]
  purchaseOrders PurchaseOrder[]
  grns          GoodsReceivedNote[]
  stockTransfersFrom StockTransfer[] @relation("FromBranch")
  stockTransfersTo   StockTransfer[] @relation("ToBranch")
  exportHistory ExportHistory[]

  @@index([code])
  @@index([status])
}

model Medicine {
  id            String    @id @default(cuid())
  name          String
  genericName   String?
  manufacturer  String?
  batchNumber   String
  expiryDate    DateTime
  quantity      Int
  reorderLevel  Int       @default(10)
  unitPrice     Float
  category      String
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  syncStatus    String    @default("LOCAL")
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  saleItems     SaleItem[]
  
  // Controlled substance fields
  isControlled  Boolean   @default(false)
  scheduleClass String?   // SCHEDULE_I, SCHEDULE_II, etc.
  controlledRegister ControlledSubstanceRegister[]

  @@index([name])
  @@index([category])
  @@index([batchNumber])
  @@index([expiryDate])
  @@index([branchId])
  @@index([syncStatus])
  @@index([isControlled])
}

model Customer {
  id            String    @id @default(cuid())
  name          String
  phone         String    @unique
  email         String?
  address       String?
  dateOfBirth   DateTime?
  gender        String?
  loyaltyPoints Int       @default(0)
  creditBalance Float     @default(0)
  creditLimit   Float     @default(0)
  status        String    @default("ACTIVE")
  notes         String?
  syncStatus    String    @default("LOCAL")
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sales         Sale[]
  loyaltyTransactions LoyaltyTransaction[]
  creditTransactions  CreditTransaction[]

  @@index([name])
  @@index([phone])
  @@index([email])
  @@index([status])
  @@index([syncStatus])
}

model LoyaltyTransaction {
  id            String    @id @default(cuid())
  customerId    String
  customer      Customer  @relation(fields: [customerId], references: [id])
  type          String
  points        Int
  saleId        String?
  description   String?
  createdAt     DateTime  @default(now())

  @@index([customerId])
  @@index([saleId])
  @@index([createdAt])
}

model CreditTransaction {
  id            String    @id @default(cuid())
  customerId    String
  customer      Customer  @relation(fields: [customerId], references: [id])
  type          String
  amount        Float
  saleId        String?
  description   String?
  createdBy     String?
  createdAt     DateTime  @default(now())

  @@index([customerId])
  @@index([saleId])
  @@index([createdAt])
}

model Sale {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  customerId    String?
  customer      Customer? @relation(fields: [customerId], references: [id])
  customerName  String?
  customerPhone String?
  subtotal      Float
  discount      Float     @default(0)
  loyaltyPointsUsed Int   @default(0)
  loyaltyPointsEarned Int @default(0)
  total         Float
  paymentMethod String
  paymentStatus String    @default("PAID")
  notes         String?
  soldBy        String?
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  syncStatus    String    @default("PENDING")
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         SaleItem[]

  @@index([invoiceNumber])
  @@index([customerId])
  @@index([createdAt])
  @@index([paymentMethod])
  @@index([branchId])
  @@index([syncStatus])
}

model SaleItem {
  id            String    @id @default(cuid())
  saleId        String
  medicineId    String
  medicineName  String
  batchNumber   String
  quantity      Int
  unitPrice     Float
  total         Float
  sale          Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  medicine      Medicine  @relation(fields: [medicineId], references: [id])

  @@index([saleId])
  @@index([medicineId])
}

model Supplier {
  id            String    @id @default(cuid())
  name          String
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  status        String    @default("ACTIVE")
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  purchaseOrders PurchaseOrder[]

  @@index([name])
  @@index([status])
}

model PurchaseOrder {
  id            String    @id @default(cuid())
  poNumber      String    @unique
  supplierId    String
  supplier      Supplier  @relation(fields: [supplierId], references: [id])
  status        String    @default("DRAFT")
  subtotal      Float
  tax           Float     @default(0)
  total         Float
  notes         String?
  expectedDate  DateTime?
  createdBy     String?
  branchId      String?
  branch        Branch?   @relation(fields: [branchId], references: [id])
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         PurchaseOrderItem[]
  grns          GoodsReceivedNote[]

  @@index([poNumber])
  @@index([supplierId])
  @@index([status])
  @@index([createdAt])
  @@index([branchId])
}

model PurchaseOrderItem {
  id              String    @id @default(cuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  medicineName    String
  genericName     String?
  quantity        Int
  receivedQty     Int       @default(0)
  unitCost        Float
  total           Float
  category        String?

  @@index([purchaseOrderId])
}

model GoodsReceivedNote {
  id              String    @id @default(cuid())
  grnNumber       String    @unique
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  receivedDate    DateTime  @default(now())
  receivedBy      String?
  notes           String?
  status          String    @default("RECEIVED")
  branchId        String?
  branch          Branch?   @relation(fields: [branchId], references: [id])
  lastSyncedAt    DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  items           GRNItem[]

  @@index([grnNumber])
  @@index([purchaseOrderId])
  @@index([receivedDate])
  @@index([branchId])
}

model GRNItem {
  id              String    @id @default(cuid())
  grnId           String
  grn             GoodsReceivedNote @relation(fields: [grnId], references: [id], onDelete: Cascade)
  medicineName    String
  batchNumber     String
  expiryDate      DateTime
  quantityReceived Int
  unitCost        Float
  total           Float
  addedToInventory Boolean  @default(false)

  @@index([grnId])
}

model StockTransfer {
  id              String    @id @default(cuid())
  transferNumber  String    @unique
  fromBranchId    String
  fromBranch      Branch    @relation("FromBranch", fields: [fromBranchId], references: [id])
  toBranchId      String
  toBranch        Branch    @relation("ToBranch", fields: [toBranchId], references: [id])
  status          String    @default("PENDING")
  notes           String?
  createdBy       String?
  completedBy     String?
  createdAt       DateTime  @default(now())
  completedAt     DateTime?
  updatedAt       DateTime  @updatedAt
  items           StockTransferItem[]

  @@index([transferNumber])
  @@index([fromBranchId])
  @@index([toBranchId])
  @@index([status])
  @@index([createdAt])
}

model StockTransferItem {
  id              String    @id @default(cuid())
  transferId      String
  transfer        StockTransfer @relation(fields: [transferId], references: [id], onDelete: Cascade)
  medicineId      String
  medicineName    String
  batchNumber     String
  quantity        Int
  unitPrice       Float

  @@index([transferId])
  @@index([medicineId])
}

model AccountMapping {
  id              String    @id @default(cuid())
  accountType     String
  accountCode     String
  accountName     String
  description     String?
  tallyLedger     String?
  sageLedger      String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([accountType])
  @@index([isActive])
}

model ExportHistory {
  id              String    @id @default(cuid())
  exportType      String
  format          String
  dateFrom        DateTime
  dateTo          DateTime
  recordCount     Int       @default(0)
  fileName        String
  fileSize        Int?
  status          String    @default("COMPLETED")
  errorMessage    String?
  exportedBy      String?
  branchId        String?
  branch          Branch?   @relation(fields: [branchId], references: [id])
  createdAt       DateTime  @default(now())

  @@index([exportType])
  @@index([status])
  @@index([createdAt])
  @@index([branchId])
}

model SyncQueue {
  id              String    @id @default(cuid())
  entityType      String
  entityId        String
  operation       String
  payload         String
  status          String    @default("PENDING")
  attempts        Int       @default(0)
  lastAttemptAt   DateTime?
  errorMessage    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status])
  @@index([entityType])
  @@index([createdAt])
}

model AppSettings {
  id              String    @id @default(cuid())
  key             String    @unique
  value           String
  description     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([key])
}

// Controlled Substances Register - Kenya Poisons Act Compliance
model ControlledSubstanceRegister {
  id                    String    @id @default(cuid())
  entryNumber           String    @unique // Format: CSR-BRANCHCODE-YYYY-XXXXX
  
  // Medicine details
  medicineId            String
  medicine              Medicine  @relation(fields: [medicineId], references: [id])
  medicineName          String
  batchNumber           String
  scheduleClass         String    // SCHEDULE_I, SCHEDULE_II, SCHEDULE_III, SCHEDULE_IV, SCHEDULE_V, PSYCHOTROPIC
  
  // Transaction details
  transactionType       String    // RECEIPT, SALE, TRANSFER_IN, TRANSFER_OUT, ADJUSTMENT, DESTRUCTION, RETURN
  transactionDate       DateTime  @default(now())
  
  // Quantity tracking
  quantityIn            Int       @default(0)
  quantityOut           Int       @default(0)
  balanceBefore         Int
  balanceAfter          Int
  
  // Reference to source document
  referenceType         String?   // GRN, SALE, TRANSFER, ADJUSTMENT
  referenceId           String?   // ID of related record
  referenceNumber       String?   // Human-readable reference number
  
  // For SALE transactions - Patient info (Kenya PPB requirement)
  patientName           String?
  patientId             String?   // National ID or Passport
  prescriptionId        String?
  prescriberName        String?
  prescriberRegNo       String?   // Prescriber registration number
  
  // For RECEIPT transactions - Supplier info
  supplierName          String?
  supplierLicense       String?
  
  // For DESTRUCTION - Witness info (Kenya PPB requirement)
  witnessName           String?
  witnessRole           String?
  destructionMethod     String?
  destructionCertificate String?
  
  // Audit fields
  recordedBy            String    // User ID who recorded
  recordedByName        String
  recordedByRole        String
  verifiedBy            String?   // Second pharmacist verification
  verifiedByName        String?
  verifiedAt            DateTime?
  
  // Branch tracking
  branchId              String?
  branchName            String?
  
  notes                 String?
  attachments           String?   // JSON array of file paths
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@index([medicineId])
  @@index([transactionType])
  @@index([transactionDate])
  @@index([scheduleClass])
  @@index([branchId])
  @@index([verifiedBy])
  @@index([entryNumber])
}
