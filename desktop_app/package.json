{
  "name": "dawacare-pos",
  "version": "1.0.73",
  "description": "DawaCare POS - Offline-First Pharmacy Management Desktop Application",
  "main": "dist/main/src/main/main.js",
  "author": {
    "name": "DawaCare",
    "email": "support@dawacare.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "package:all": "electron-builder -mwl",
    "postinstall": "npm run prisma:generate",
    "prisma:generate": "prisma generate --schema=prisma/sqlite/schema.prisma && prisma generate --schema=prisma/postgresql/schema.prisma",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "seed:test": "tsx scripts/seed-test-db.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "bcryptjs": "^2.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.562.0",
    "pg": "^8.17.2",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.6.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "playwright": "^1.58.0",
    "postcss": "^8.4.30",
    "prisma": "^6.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.dawacare.pos",
    "productName": "DawaCare-POS",
    "copyright": "Copyright Â© 2025 DawaCare",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "prisma/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "build/icons/icon_256x256.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business",
      "icon": "build/icons/icon_512x512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "maintainer": "DawaCare <support@dawacare.com>",
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "node_modules/.prisma",
        "to": "app.asar.unpacked/node_modules/.prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@prisma/client",
        "to": "app.asar.unpacked/node_modules/@prisma/client",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@prisma/engines",
        "to": "app.asar.unpacked/node_modules/@prisma/engines",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icons",
        "to": "build/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "GodfreyNjoro",
      "repo": "dawacare-pharmacy-system",
      "releaseType": "release"
    },
    "icon": "build/icon.png"
  },
  "homepage": "https://github.com/GodfreyNjoro/dawacare-pharmacy-system"
}
